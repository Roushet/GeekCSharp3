<UserControl x:Class="MailSender.Views.ToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MailSender.Views"
             mc:Ignorable="d" 
             Width="Auto" Height="30"
             d:DesignHeight="30" d:DesignWidth="350">
    <ToolBar>
        <Label Content="Отправитель:"/>
        <ComboBox Width="150" SelectedItem="" SelectedIndex="0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="111"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button ToolTip="Добавить отправителя">
            <StackPanel>
                <Image Source="src/add.png" Width="20" Height="20" />
            </StackPanel>
        </Button>
        <Button ToolTip="Редактировать отправителя">
            <StackPanel>
                <Image Source="src/edit.png" Width="20" Height="20" />
            </StackPanel>
        </Button>
        <Button ToolTip="Удалить отправителя">
            <StackPanel>
                <Image Source="src/remove.png" Width="20" Height="20" />
            </StackPanel>
        </Button>

    </ToolBar>

</UserControl>
