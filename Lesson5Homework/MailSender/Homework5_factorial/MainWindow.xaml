<Window x:Class="Homework5_factorial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework5_factorial"
        mc:Ignorable="d"
        Title="Вычисление факториала" Height="200" Width="525">
    <StackPanel>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0">
                <TextBlock Text="Введите число:"/>
            </Label>
            <TextBox Grid.Column="1" Grid.Row="0"></TextBox>
            <Label Grid.Row="1" Grid.ColumnSpan="2">
                <TextBlock Text="Ответ: "/>
            </Label>
        </Grid>
        <Button Margin="5" Height="20" Content="Посчитать факториал"/>
    </StackPanel>
</Window>
